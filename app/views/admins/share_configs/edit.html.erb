<div class="panel panel-primary">
  <div class="panel-heading">修改分享内容</div>
  <div class="panel-body">


    <div class="container">
      <form action="/admins/share_configs/share_update" method="post">


        <input name="id" value="<%= @share_config.id%>" type="hidden">
        <div class="form-group row">
          <label for="input" class="col-sm-2 col-form-label">分享标题</label>
          <div class="col-sm-6">
            <input type="input" name="title" value="<%= @share_config.title %>" class="form-control" required="required" placeholder="分享标题">

          </div>

        </div>

        <div class="form-group row">
          <label for="input" class="col-sm-2 col-form-label">分享内容</label>
          <div class="col-sm-6">
            <textarea class="form-control" name="desc" rows="3" required="required" placeholder="分享内容"><%= @share_config.desc %></textarea>
          </div>

        </div>

        <div class="form-group row">
          <span class="col-sm-2 col-form-label">内容类型: </span>
          <select class="col-sm-3 selectpicker" name="share_type">
            <option value=0 <%= type_is_selected_option(@share_config, 0) %>>无</option>
            <option value=1 <%= type_is_selected_option(@share_config, 1) %>>微信内容分享</option>
            <option value=2  <%= type_is_selected_option(@share_config, 2) %>>公告管理</option>
          </select>

        </div>

        <div class="form-group row">
          <label class="col-sm-2">是否禁用</label>
          <div class="col-sm-10">
            <div class="form-check">
              <label class="form-check-label">
                <label><input name="status"   type="radio" value="0" <%= status_is_selected_option(@share_config,0) %>  />禁用
                </label>
                <label><input name="status"  type="radio" value="1" <%= status_is_selected_option(@share_config,1) %>  />启用
                </label>
              </label>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <button type="submit" id="add_product_submit" class="btn btn-primary">确定</button>
          </div>
        </div>

      </form>
    </div>

  </div>
</div>

