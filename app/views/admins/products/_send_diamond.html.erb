<p>
  <button class="btn btn-warning" type="button" data-toggle="collapse" data-target="#diamond_collapse" aria-expanded="false" aria-controls="collapseExample">
    赠送钻币
  </button>
</p>

<div class="collapse" id="diamond_collapse">
  <div class="card card-block">

    <div class="form-group row">
      <span class="col-sm-2 col-form-label">商品类型: </span>
      <select class="col-sm-3 selectpicker" name="product_second_type">
        <option value=1>夺宝赠送钻币产品</option>
        <!--<option value=0>夺宝产品</option>-->

      </select>

    </div>

    <div class="form-group row">
      <label for="input" class="col-sm-2 col-form-label">钻币数量</label>
      <div class="col-sm-3">
        <input type="number" min="0" max="5000" value="<%= product_type_send_diamond_num(@product)%>" name="diamond_num" class="form-control" placeholder="中奖后赠送的钻币数量">
      </div>
    </div>


    <div class="form-group row">
      <label class="col-sm-2">赠送钻币</label>
      <div class="col-sm-10">
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox"  <%= is_product_type_send_diamond(@product)%>  name="is_type3"> 是
          </label>
        </div>
      </div>
    </div>

  </div>
</div>