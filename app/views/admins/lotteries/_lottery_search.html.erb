<div class="row">

  <form action="/admins/lotteries/search" method="post">
    <div class="input-group">

      <div class="row lottery-search">
        <div class="col-xs-6">
          <span class="lottery-search-span">发布日期:</span>
          <input type="date"  name="published_at"  class="form-control  lottery-search-input"  placeholder="发布日期">
        </div>

        <div class="col-xs-6">
          <span class="lottery-search-span">抽奖期号:</span>
          <input type="text"  name="lottery_code"  class="form-control lottery-search-input" placeholder="期号">

        </div>

        <div class="col-xs-6">
          <span class="lottery-search-span">商品名称:</span>
          <input type="text"  name="product_name"  class="form-control lottery-search-input" placeholder="商品名称">

        </div>

        <div class="col-xs-6">
          <span class="lottery-search-span">自动延期: </span>
          <select class="selectpicker" name="auto_extension_status" style="width: 60%">
            <option value=0>全部</option>
            <option value=1>不延期</option>
            <option value=2>自动延期</option>
          </select>

        </div>

        <button class="btn btn-default lottery-search-button" type="submit" >查询</button>


      </div>


    </div>
  </form>


</div>