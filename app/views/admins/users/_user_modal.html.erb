<!-- 修改用户密码modal -->
<div class="modal fade" id="updatePasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="exampleModalLabel">修改密码</h4>
      </div>
      <form action="/admins/users/update_password" method="post">
        <div class="modal-body">

          当前密码：<input type="password" class="form-control" name='old_password'>
          输入新密码：<input type="password" class="form-control" name='password'>
          确认密码：<input type="password" class="form-control" name='confirm_password'>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          <button type="submit" class="btn btn-primary">确定</button>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- 用户忘记密码修改modal -->
<div class="modal fade" id="updateForgetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="exampleModalLabel">重置密码</h4>
      </div>
      用户姓名：<span class="reset_password_user_name"></span><br>
      用户手机号：<span class="reset_password_user_phone"></span>
      <form action="/admins/users/forget_password_update" method="post">
        <input id="forget_password_user_id" type="hidden" name="id">
        <div class="modal-body">
          <!--输入新密码：<input type="password" class="form-control" name='password'>-->
          <!--确认密码：<input type="password" class="form-control" name='confirm_password'>-->
          <input type="hidden" class="form-control" name='user_type' value="user">
          <input type="hidden" class="form-control" name='password' value="password">
          <input type="hidden" class="form-control" name='confirm_password' value="password">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          <button type="submit" class="btn btn-primary">确定</button>
        </div>
      </form>
    </div>
  </div>
</div>





<!-- 普通用户添加权限modal -->
<div class="modal fade" id="addAdminRoleForUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="exampleModalLabel">用户添加权限</h4>
      </div>
      <form action="/admins/users/add_roles_for_user" method="post">
        <div class="modal-body">
          <input type="hidden" name="id" id="add_role_user_id">
          用户姓名：<span class="add_role_user_name"></span><br>
          用户手机号：<span class="add_role_user_phone"></span>
          <div class="form-group row">
            <input type="hidden" class="form-control" name='user_type' value="user">
            <span class="col-sm-2 col-form-label">用户角色: </span>
            <select class="col-sm-3 selectpicker" name="role">
              <option value=1>普通用户</option>
              <option value=3>内测用户</option>
            </select>

          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          <button type="submit" class="btn btn-primary">确定</button>
        </div>
      </form>


    </div>
  </div>
</div>





