<div class="panel panel-primary">
  <div class="panel-heading">修改</div>
  <div class="panel-body">


    <div class="container">
      <form action="/admins/resources/resource_update" method="post">

        <input type="hidden" name="id" value="<%= @resource.id %>">
        <div class="form-group row">
          <label for="input" class="col-sm-2 col-form-label">名称</label>
          <div class="col-sm-6">
            <input type="input" name="name" class="form-control" value="<%= @resource.name %>" required="required" placeholder="权限名称">

          </div>

        </div>

        <div class="form-group row">
          <label for="input" class="col-sm-2 col-form-label">Model</label>
          <div class="col-sm-6">
            <input type="input" name="model_n" class="form-control" value="<%= @resource.model_n %>" required="required" placeholder="资源对应的Model,例如：Product">
          </div>

        </div>


        <div class="form-group row">
          <label for="input" class="col-sm-2 col-form-label">Controller</label>
          <div class="col-sm-6">
            <input type="input" name="controller_n" class="form-control" value="<%= @resource.controller_n %>" required="required" placeholder="资源对应的Controller,例如：admins/products">
          </div>

        </div>

        <div class="form-group row">
          <label for="input" class="col-sm-2 col-form-label">Action</label>
          <div class="col-sm-6">
            <input type="input" name="action_n" value="<%= @resource.action_n %>" class="form-control" required="required" placeholder="资源对应的Action,例如：crate">
          </div>

        </div>

        <div class="form-group row">
          <label for="input" class="col-sm-2 col-form-label">描述</label>
          <div class="col-sm-6">
            <input type="input" name="desc" value="<%= @resource.desc %>" class="form-control" placeholder="描述">
          </div>

        </div>

        <div class="form-group row">
          <span class="col-sm-2 col-form-label">资源分类: </span>
          <select class="col-sm-3 selectpicker" name="resource_type">
            <option <%= admin_resource_type_is_selected @resource.resource_type,0%>  value=0>无</option>
            <option <%= admin_resource_type_is_selected @resource.resource_type,1%> value=1>前端权限资源</option>
            <option <%= admin_resource_type_is_selected @resource.resource_type,2%>  value=2>后台权限资源</option>
          </select>

        </div>

        <div class="form-group row">
          <label class="col-sm-2">是否禁用</label>
          <div class="col-sm-10">
            <div class="form-check">
              <label class="form-check-label">
                <label><input name="status" <%= status_is_selected_option @resource, 0 %> type="radio" value="0"/>禁用
                </label>
                <label><input name="status" <%= status_is_selected_option @resource, 1 %> type="radio" value="1"/>启用
                </label>
              </label>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <button type="submit" id="add_product_submit" class="btn btn-primary">确定</button>
          </div>
        </div>

      </form>
    </div>

  </div>
</div>

