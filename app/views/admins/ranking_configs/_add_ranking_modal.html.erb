<!-- 添加收益名次设置的modal -->
<div class="modal fade" id="addRankingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="exampleModalLabel">添加名次</h4>
      </div>

      <form action="/admins/ranking_configs"  method="post">
        <div class="modal-body">
          <input type="hidden" name="from_url" value="earning_manage">
          <div class="form-group row">
            <label for="input" class="col-sm-2 col-form-label">名次:</label>
            <div class="col-sm-6">
              <input type="number"  required="required" min="0" max="99999999" name="ranking"  class="form-control"  placeholder="名次">
            </div>

          </div>

          <div class="form-group row">
            <label for="input" class="col-sm-2 col-form-label">日期规则:</label>
            <div class="col-sm-6">

              <select class="selectpicker" name="date_type" style="width: 30%">
                <option  value=1>日排行</option>
                <option  value=2>周排行</option>
                <option  value=3>月排行</option>
                <option  value=4>年排行</option>

              </select>
            </div>

          </div>


          <div class="form-group row">
            <label for="input" class="col-sm-2 col-form-label">奖项类型:</label>
            <div class="col-sm-6">
              <select class="selectpicker" name="ranking_type" style="width: 30%">
                <option  value=1>收益奖品</option>
                <option  value=2>收益率奖品</option>

              </select>
            </div>

          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          <button type="submit" class="btn btn-primary">确定</button>
        </div>
      </form>
    </div>
  </div>
</div>

