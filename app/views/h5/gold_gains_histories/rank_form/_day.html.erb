<div class="day">
  <a href="<%= rank_detail_h5_gold_gains_histories_path(type: '本日收益排行' ) %>">
    <h3 class='prize_count_time'>日排名
      <span class='seconds hide'><%= ("#{Date.today} 17:30:00".to_time - Time.now).to_i %></span>
      <span>距开奖时间：</span><span class='time_str'>已开奖......</span>
    </h3>
  </a>
  <% unless @day_ranks.blank? %>
    <ul class="win">
      <% @day_ranks.first(3).each do |dr| %>
        <% user = dr['user'] %>
        <li>
          <span></span>
          <span><%= image_tag user['headimgurl'] %></span>
          <span><%= user['nickname'] || user['phone'] %></span>
          <% if !dr.blank? && dr['user_id'] == current_user.id && @self_day_rank %>
            <%= render partial: 'get_prize', locals: { ranking_config: @self_day_rank, type: 'D', amount: (dr['amount'].presence.to_f || 0), from: 'rank' } %>
          <% else %>
            <p><span class="logo-money"></span><%= number_to_currency dr['amount'].to_f %></p>
          <% end %>
        </li>
      <% end %>
      <%# self_rank = @day_ranks.pluck(:user_id).index(current_user.id) rescue nil %>
      <%# unless @day_ranks.first(3).map(&:user_id).include?(current_user.id) || @day_ranks.blank? || self_rank.blank? %>
      <% unless @day_ranks.first(3).map{|i| i['user_id']}.include?(current_user.id) || @day_ranks.blank? %>
        <li class="last">
          <% self_rank = $redis.get("self_rank_#{current_user.id}_day_rank").to_i %>
          <span><%= rank(self_rank) %></span>
          <span><%= image_tag current_user.headimgurl %></span>
          <span><%= current_user.nickname || current_user.phone %></span>
          <%# self_amount = @day_ranks.where(user_id: current_user.id).first.amount rescue 0 %>
          <% self_amount = JSON.parse($redis.get("self_rank_#{current_user.id}_day_data"))['amount'] rescue 0 %>
          <%= render partial: 'get_prize', locals: { ranking_config: @self_day_rank, type: 'D', amount: self_amount.to_f, from: 'rank' } %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>