<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :phone %>
  <%= error_span(@user[:phone]) %>
  <%= f.input :encrypted_password %>
  <%= error_span(@user[:encrypted_password]) %>
  <%= f.input :current_sign_in_at %>
  <%= error_span(@user[:current_sign_in_at]) %>
  <%= f.input :last_sign_in_at %>
  <%= error_span(@user[:last_sign_in_at]) %>
  <%= f.input :current_sign_in_ip %>
  <%= error_span(@user[:current_sign_in_ip]) %>
  <%= f.input :last_sign_in_ip %>
  <%= error_span(@user[:last_sign_in_ip]) %>
  <%= f.input :province %>
  <%= error_span(@user[:province]) %>
  <%= f.input :openid %>
  <%= error_span(@user[:openid]) %>
  <%= f.input :nickname %>
  <%= error_span(@user[:nickname]) %>
  <%= f.input :sex %>
  <%= error_span(@user[:sex]) %>
  <%= f.input :city %>
  <%= error_span(@user[:city]) %>
  <%= f.input :country %>
  <%= error_span(@user[:country]) %>
  <%= f.input :headimgurl %>
  <%= error_span(@user[:headimgurl]) %>
  <%= f.input :unionid %>
  <%= error_span(@user[:unionid]) %>
  <%= f.input :salt %>
  <%= error_span(@user[:salt]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
<% end %>
